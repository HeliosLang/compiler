    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "skipFiles": ["<node_internals>/**"],
            "program": "--test",
            "args": ["${input:testName}"]
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "type": "promptString",
            "description": "name of test to run"
        }
    ]
}
